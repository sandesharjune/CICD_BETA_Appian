<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <versionUuid>_a-0000e394-8db7-8000-0bd6-01ef9001ef90_97087</versionUuid>
    <rule>
        <name>LMS_SendTask</name>
        <uuid>_a-0000e394-8db7-8000-0bd6-01ef9001ef90_96731</uuid>
        <description>Form interface used to send an ad-hoc task from a LMS record [Tasking]</description>
        <parentUuid>39692fae-18b2-406e-a67d-a0c816c998aa</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>=#"SYSTEM_SYSRULES_formLayout_v1"(
  label: if(
    isnull(ri!recordId),
    "Send Task",
    "Send Task from " &amp; #"ab15f377-a9ff-4d8d-897d-2295c2df8654_GETONERECORD"(ri!recordId).book_name
  ),
  instructions: "Details of this record will be embedded in the task form",
  contents: #"_a-0000e394-8db7-8000-0bd6-01ef9001ef90_96735"(
    assignee: ri!assignee,
    taskDetails: ri!taskDetails,
    deadline: ri!deadline
  ),
  buttons: #"SYSTEM_SYSRULES_ButtonLayout"(
    primaryButtons: {
      #"SYSTEM_SYSRULES_ButtonWidgetSubmit"(
        label: "Send Task",
        style: "PRIMARY",
        confirmMessage: if(
          or(
            isnull(ri!assignee),
            isusermemberofgroup(ri!assignee, #"_a-0000e394-8db7-8000-0bd6-01ef9001ef90_96595")
          ),
          "",
          "Are you sure you want to send a task to this user? They will receive access to all records in the Library Management system application."
        ),
        saveInto: {
          a!save(ri!taskedOn, now()),
          a!save(ri!taskFrom, loggedinuser())
        }
      )
    },
    secondaryButtons: {
      #"SYSTEM_SYSRULES_ButtonWidgetSubmit"(
        label: "Cancel",
        style: "NORMAL",
        value: true,
        saveInto: ri!cancel,
        skipValidation: true
      )
    }
  )
)</definition>
        <namedTypedValue>
            <name>assignee</name>
            <type>
                <name>User</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>taskDetails</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>taskedOn</name>
            <type>
                <name>dateTime</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>taskFrom</name>
            <type>
                <name>User</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>recordId</name>
            <type>
                <name>int</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>cancel</name>
            <type>
                <name>boolean</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>deadline</name>
            <type>
                <name>dateTime</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <metadataExpr></metadataExpr>
        <preferredEditor>interface</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
