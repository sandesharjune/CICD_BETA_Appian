    <versionUuid>_a-0000e394-8db7-8000-0bd6-01ef9001ef90_97270</versionUuid>
    <rule>
        <name>LMS_GenerateLinkForCurrentUsersTasks</name>
        <uuid>_a-0000e394-8db7-8000-0bd6-01ef9001ef90_96751</uuid>
        <description>Support rule for task reports that takes a task id and assignee, and returns a task link if the assignee is the current user. Returns null otherwise. [Tasking] [Records]</description>
        <parentUuid>10a2bc4c-c48e-492c-850d-41b227fe2760</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>if(
  ri!assignee = loggedInUser(),
  #"SYSTEM_SYSRULES_processTaskLink"(task: ri!taskId),
  null
)</definition>
        <namedTypedValue>
            <name>taskId</name>
            <type>
                <name>int</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>assignee</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <metadataExpr></metadataExpr>
        <preferredEditor>interface</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
